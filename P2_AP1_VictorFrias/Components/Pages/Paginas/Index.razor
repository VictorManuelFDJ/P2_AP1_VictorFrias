@page "/Pedidos"

@inject PedidosServices pedidosService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Pedidos</PageTitle>

<div class="container mt-4">
    <div class="card shadow-lg">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title m-0">Registro de Pedidos</h5>
            <a href="/Pedidos/Create" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> Crear
            </a>
        </div>

        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-4">
                    <label><strong>Nombre del cliente</strong></label>
                    <InputText class="form-control" @bind-Value="FiltroNombre" placeholder="Buscar por nombre..." />
                </div>

                <div class="col-md-3">
                    <label><strong>Desde</strong></label>
                    <InputDate class="form-control" @bind-Value="FechaInicio" />
                </div>

                <div class="col-md-3">
                    <label><strong>Hasta</strong></label>
                    <InputDate class="form-control" @bind-Value="FechaFin" />
                </div>

                <div class="col-md-2 d-flex align-items-center">
                    <button type="button" class="btn btn-outline-primary mt-0 " @onclick="Buscar">
                        <i class="bi bi-search"></i> 
                    </button>
                    <button type="button" class="btn btn-outline-secondary" @onclick="Restablecer">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </button>
                </div>
            </div>

            <table class="table table-hover mt-3">
                <thead class="table table-striped text-black">
                    <tr>
                        <th>Id</th>
                        <th>Nombre Cliente</th>
                        <th>Fecha</th>
                        <th>Total</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @if (ListaPedidos?.Any() == true)
                    {
                        @foreach (var pedido in ListaPedidos)
                        {
                            <tr>
                                <td>@pedido.PedidosId</td>
                                <td>@pedido.NombreCliente</td>
                                <td>@pedido.Fecha.ToString("dd/MM/yyyy")</td>
                                <td>@pedido.Total.ToString("C")</td>
                                <td>
                                    <a href="/Pedidos/Edit/@pedido.PedidosId" class="btn btn-outline-primary bi bi-pencil-square"></a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@code {
    private List<Pedidos> ListaPedidos = new();

    public string FiltroNombre { get; set; } = string.Empty;
    public DateTime? FechaInicio { get; set; }
    public DateTime? FechaFin { get; set; }

    protected override async Task OnInitializedAsync()
    {
        ListaPedidos = await pedidosService.Listar(e => e.PedidosId > 0);
    }

    private async Task Buscar()
    {
        ListaPedidos = await pedidosService.Listar(e =>
            (string.IsNullOrWhiteSpace(FiltroNombre) || e.NombreCliente.ToLower().Contains(FiltroNombre.ToLower())) &&
            (!FechaInicio.HasValue || e.Fecha >= FechaInicio.Value) &&
            (!FechaFin.HasValue || e.Fecha <= FechaFin.Value)
        );
    }

    private async Task Restablecer()
    {
        FiltroNombre = string.Empty;
        FechaInicio = null;
        FechaFin = null;
        ListaPedidos = await pedidosService.Listar(e => e.PedidosId > 0);
    }
}
